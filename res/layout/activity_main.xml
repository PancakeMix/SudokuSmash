<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ssmenubackl"
    android:gravity="center"
    tools:context=".MainActivity" >
    

    <ImageButton
        android:id="@+id/bBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78sp"
        android:src="@drawable/ssbeginl" />

    <ImageButton
        android:id="@+id/bEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62sp"
        android:src="@drawable/sseasy" />
    <ImageButton
        android:id="@+id/bMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:src="@drawable/ssmedium" />
    <ImageButton
        android:id="@+id/bHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:src="@drawable/sshard" />
</LinearLayout>
